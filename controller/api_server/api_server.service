[Unit]
Description=API Server
After=network.target

[Service]
Type=simple
User=dataset
ExecStart=/home/dataset/go/bin/api_server
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target

